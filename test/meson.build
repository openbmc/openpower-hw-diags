test_arg = [
    '-DTEST_TRACE',
]

# end2end code exerciser for experiment and testing
subdir('end2end')

tests = [
  'bin_stream_test',
  'ffdc_file_test',
  'resolution_test',
  'pdbg_dts_test',
]

analyzer_src = files(
  '../analyzer/service_data.cpp',
)

gtest = dependency('gtest', main : true, required : false, method : 'system')

if gtest.found()
    foreach t : tests
        test(t, executable(t.underscorify(), [ t + '.cpp', analyzer_src ],
                           link_with : [ util_lib ],
                           dependencies : [ 
                            dependency('phosphor-logging'),
                            libpdbg_dep,
                            libhei_dep,
                            gtest
                           ],
                           cpp_args : test_arg,
                           include_directories : incdir),
             env : ['PDBG_DTB=../test/pdbg_dts_test.dtb'])
    endforeach
endif
